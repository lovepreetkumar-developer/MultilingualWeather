<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="CustomTextViewRegular" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewMedium" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewSemiBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomButtonDialog" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="iconPadding">@dimen/_2sdp</item>
    </style>

    <style name="WebViewTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/color_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/color_purple</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

</resources>